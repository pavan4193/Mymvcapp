@model Category

<form method="post">
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-balck">Delete Category</h2>
        <hr>
    </div>
    <div asp-validation-summary="ModelOnly">

    </div>
    <div class="mb-3">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" disabled class="form-control" />


    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" disabled class="form-control"/>

    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-dark danger form-control">Delete</button>
        </div>
         <div class="col-6">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                back to list
            </a>
        </div>
    </div>
</div>
</form>
